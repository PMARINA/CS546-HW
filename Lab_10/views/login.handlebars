<div class="section hero is-fullheight is-dark">
  <div class="hero-body">
    <div class="container content">
      <div class="columns is-centered">
        <div class="column is-6-tablet is-5-desktop is-4-widescreen">
            <h1 class="title">Log In</h1>
            <p class="subtitle">Log in to see your secret page</p>
            {{#if genHelp}}
            <p class="is-danger block">{{genHelp}}</p>
            {{/if}}
          <form
            id="login-form"
            method="post"
            class="box has-background-primary-light"
            action="/login"
          >
            <div class="field">
              <label class="label" for="username">Username</label>
              <div class="control">
                <input
                  type="text"
                  name="username"
                  id="username"
                  class="input"
                  {{#if uname}} 
                    value="{{uname}}" 
                  {{/if}}
                />
              </div>
              {{#if unameHelp}}
              <p class="help is-danger">{{unameHelp}}</p>
              {{/if}}
            </div>
            <div class="field">
              <label class="label" for="password">Password</label>
              <div class="control">
                <input
                  type="password"
                  name="password"
                  id="password"
                  class="input"
                />
              </div>
              {{#if pwdHelp}}
                <p class="help is-danger">{{pwdHelp}}</p>
                {{/if}}
            </div>
            <div class="control">
              <label for="submit" hidden>Log In</label>
              <input
                class="button is-primary input"
                type="submit"
                name="submit"
                id="submit"
                value="Log In"
              />
            </div>
          </form>

          <p class="block"><a href="/signup" class="button is-link input">Need
              to register? Click here to sign up</a></p>
        </div>
      </div>
    </div>
  </div>
</div>